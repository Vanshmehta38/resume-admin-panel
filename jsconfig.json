{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@images/*": ["public/images/*"],
      "@styles-page/*": ["src/styles-page/*"],
      "@styles-layout/*": ["src/styles-layout/*"],
      "@breadcrumbs/*": ["src/utils/breadcrumbs/*"],
      "@validations/*": ["src/utils/validations/*"],
      "@store/*": ["src/store/*"],
      "@pages/*": ["src/pages/*"],
      "@functions/*": ["src/utils/custom-functions/*"],
      "@api/*": ["src/utils/api-routes/*"],
      "@strings": ["src/constants/strings"],
      "@patterns": ["src/constants/patterns"],
      "@routes": ["src/constants/routes"],
      "@currency": ["src/constants/currency"],
      "@colors": ["src/constants/color"],
      "@useAuth": ["src/hooks/use-auth"],
      "@endpoints/*": ["src/utils/endpoints/*"],
      "@configs/*": ["src/configs/*"],
      "@utils/*": ["src/@core/utils/*"],
      "@components/*": ["src/@core/components/*"],
      "@config": ["./config"]
    }
  },
  "include": ["src/**/*", "src/store"]
}
